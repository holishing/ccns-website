{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
  ]
}
